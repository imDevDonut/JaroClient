<mah:MetroWindow
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JaroClient"
        mc:Ignorable="d"
    x:Class="JaroClient.MainWindow"
    WindowStartupLocation="CenterScreen"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    WindowStyle="None"
    BorderThickness="0"
    ShowTitleBar="False"
        Title="Jaro Cliente"
    Width="640" Height="420"
    AllowsTransparency="True"
    Background="Transparent"

    ShowCloseButton="True">

    <Border x:Name="Background" Grid.RowSpan="1" Grid.ColumnSpan="1" CornerRadius="8,8,8,8"
            BorderBrush="#FF2A2A2A"
            BorderThickness="1">
        <Border.Background>
            <ImageBrush ImageSource="/Visuals/Backgrounds/BG_Main_Logo.png" Stretch="UniformToFill"/>
        </Border.Background>
        <Grid>
            <TextBlock x:Name="ClientVersion" Height="24" TextWrapping="Wrap" Text="Client v0.1" Width="140" TextAlignment="Center" Foreground="#AF2D2C2A" FontFamily="Dubai" FontSize="10" Margin="22,135,476,259"/>

            <StackPanel Width="642" Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top" Margin="0,350,0,0">

                <mah:MetroProgressBar x:Name="StartingScreen_ProgressBar" Height="6" Width="128" Background="#002D2C2A" Foreground="#FF2D2C2A" Value="51" Visibility="Collapsed"/>

                <Viewbox Stretch="Uniform" Width="240" Height="64" Margin="0,0,0,32">

                    <TextBlock x:Name="StartingScreen_StatusText" HorizontalAlignment="Center" Height="24" Width="240" Margin="0,0,0,32"
                               TextAlignment="Center" Foreground="#FF2D2C2A" FontWeight="Bold" FontFamily="Dubai"  LineStackingStrategy="BlockLineHeight"/>

                </Viewbox>


            </StackPanel>

            <DockPanel x:Name="GamesHolder" LastChildFill="False" Width="180" Height="192"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" Margin="32,0,0,64">

                <Button x:Name="GameButton_JaroTCG"
                        FontFamily="Cinzel Bold" Click="Play_JaroTCG_Button_Click" DockPanel.Dock="Bottom" Height="64" BorderBrush="{x:Null}" BorderThickness="0,0,0,0">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="GameLogo_JaroTCG"
                               Source="/Visuals/Logos/Logo - JaroTCG.png" Width="64" Height="63" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        <Grid Grid.Column="1" Height="28" Width="64">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Viewbox Stretch="Uniform"
         Width="64"
         Height="24">
                                <TextBlock x:Name="StatusText_JaroTCG"
               Text="Jugar"
               FontFamily="Dubai"
               FontSize="12"
               FontWeight="Bold"
               Foreground="White"
               TextAlignment="Center"
               VerticalAlignment="Center"/>
                            </Viewbox>

                            <mah:MetroProgressBar x:Name="ProgressBar_JaroTCG" Height="4" Width="64" Value="72" HorizontalAlignment="Center"
                                                  Grid.Row="1" Foreground="White" Background="#19FFFFFF" Visibility="Collapsed"/>

                        </Grid>
                    </Grid>
                </Button>

            </DockPanel>

        </Grid>
    </Border>
</mah:MetroWindow>
